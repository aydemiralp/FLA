<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="0dp"
                android:src="@drawable/header">

            </ImageView>




        </RelativeLayout>

        <Button

            android:id="@+id/angry_btn"
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/button_background"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Ana Ekran"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="true"
            android:rowCount="3">


            <androidx.cardview.widget.CardView
                android:id="@+id/c1"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                android:background="@drawable/cardview1"
                android:shadowColor="#A8A8A8"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:shadowColor="#A8A8A8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="YAŞLI                             TAKİBİ"
                        android:gravity="center"
                        android:fontFamily="@font/googlesans_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/konum" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/c2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                android:background="@drawable/cardview1"
                android:shadowColor="#A8A8A8"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:shadowColor="#A8A8A8">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/googlesans_bold"
                        android:gravity="center"
                        android:text="GELEN                       UYARILAR"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/uyarilar" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/c3"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:shadowColor="#A8A8A8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/googlesans_bold"
                        android:gravity="center"
                        android:text="SOS                  ÇAĞRILARI"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/sos" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:shadowColor="#A8A8A8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Flavius            Kutu"
                        android:gravity="center"
                        android:fontFamily="@font/googlesans_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/flaviukutu" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/c4"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/cardview2"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:shadowColor="#A8A8A8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="YAŞLI           BİLGİLERİ"
                        android:gravity="center"
                        android:fontFamily="@font/googlesans_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/bilgiler" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_width="170dp"
                android:layout_height="360dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:background="@drawable/cardview5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:shadowColor="#A8A8A8"
                    android:layout_marginTop="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SENSÖR                TAKİBİ"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/googlesans_bold"/>



                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/gaz"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="-47dp"/>

                    <TextView
                        android:id="@+id/textview4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-35dp"
                        android:layout_marginLeft="10dp"
                        android:text="GAZ"
                        android:fontFamily="@font/googlesans_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/su"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="-47dp"/>

                    <TextView
                        android:id="@+id/textview5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-35dp"
                        android:layout_marginLeft="10dp"
                        android:text="SU"
                        android:fontFamily="@font/googlesans_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/duman"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="-47dp"/>

                    <TextView
                        android:id="@+id/textview6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-35dp"
                        android:layout_marginLeft="25dp"
                        android:text="DUMAN"
                        android:fontFamily="@font/googlesans_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/kapi"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="-47dp"/>

                    <TextView
                        android:id="@+id/textview7"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="-40dp"
                        android:layout_marginLeft="27dp"
                        android:text="KAPI/PENCERE"
                        android:gravity="center"
                        android:fontFamily="@font/googlesans_bold"
                        android:textColor="@color/black"
                        android:textSize="11sp" />


                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/hareke1t"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="-47dp"/>

                    <TextView
                        android:id="@+id/textview8"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="-35dp"
                        android:layout_marginLeft="28dp"
                        android:text="HAREKET"
                        android:fontFamily="@font/googlesans_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />




                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="10dp"
                android:layout_marginTop="-180dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:shadowColor="#A8A8A8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="SICAKLIK"

                        android:fontFamily="@font/googlesans_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="MEVCUT DURUM"
                        android:fontFamily="@font/googlesans_medium"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <Button

                        android:id="@+id/button1"
                        android:layout_width="90dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="19dp"
                        android:background="@drawable/button_background"
                        android:shadowColor="#A8A8A8"
                        android:onClick="GetTextFromSQL"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:gravity="center"
                        android:text="Güncelle"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/googlesans_bold"
                        android:text="°C"
                        android:background="@drawable/button_background"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/button"
                        app:layout_constraintVertical_bias="0.0" />





                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </GridLayout>




    </LinearLayout>
</ScrollView>
